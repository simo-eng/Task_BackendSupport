@model Blog
@{
    Layout = "_DashBoard";
}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Adding Blog</span>
        </div>

        <div>
            <form methode="Post" asp-action="EditBlog" class="row">
                <div class="mb-3">
                    <label asp-for="Title" for="" class="form-label">Blog Title</label>
                    <input type="text"
                           asp-for="Title"
                           class="form-control"
                           value="@Model.Title"
                           placeholder="" />

                </div>
                <div class="mb-3">
                    <label asp-for="Description" for="" class="form-label">Blog Description</label>
                    <textarea type="text"
                              asp-for="Description"
                              class="form-control"
                              placeholder="">
                              @Model.Description
                          </textarea>
                </div>




                <div class="mb-3 col-lg-6">
                    <label asp-for="type.Id" for="" class="form-label">Type</label>
                    <select class="form-select "
                            asp-for="type.Id">
                        @{
                            if (Model.type.Id == 1)
                            {
                                <option >Select one</option>
                                <option selected value="1">Drama</option>
                                <option value="2">Comedy</option>
                            }
                            else if (Model.type.Id == 2)
                            {
                                <option>Select one</option>
                                <option  value="1">Drama</option>
                                <option selected value="2">Comedy</option>
                            }
                            else
                            {
                                <option selected>Select one</option>
                                <option  value="1">Drama</option>
                                <option value="2">Comedy</option>
                            }
                        }
                       
                    </select>
                </div>



                <div class=" mb-3 col-lg-5 d-flex align-items-center mt-lg-4 ">
                    <input class="form-control" type="file" id="formFile">
                </div>

                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>
    </section>
<script src="boostrap/js/bootstrap.min.js"></script>
